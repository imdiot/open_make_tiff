{
  "$schema": "https://wails.io/schemas/config.v2.json",
  "name": "open-make-tiff",
  "outputfilename": "open-make-tiff",
  "frontend:install": "npm install",
  "frontend:build": "npm run build",
  "frontend:dev:watcher": "npm run dev",
  "frontend:dev:serverUrl": "auto",
  "author": {
    "name": "imdiot",
    "email": "imdiot.y@gmail.com"
  },
  "info": {
    "productName": "Open Make Tiff",
    "productVersion": "0.0.2",
    "comments": "open make tiff"
  },
  "postBuildHooks": {
    "windows/amd64": "powershell Remove-Item -Path ./third-party -Recurse -Force; Copy-Item ../../third-party/windows-x64 -Destination ./third-party -Recurse -Force",
    "darwin/*": "cp -r ../../third-party/macos-universal/ ./open-make-tiff.app/Contents/MacOS/third-party"
  }
}
